      <nav
        class="md:mr-auto md:ml-4 md:py-1 md:pl-4 md:border-l md:border-gray-400 flex flex-wrap items-center text-base justify-center">
        <a class="mr-5 hover:text-gray-900" href="/dashboard">Dashboard</a>
        <a class="mr-5 hover:text-gray-900" href="/create-budget">Create expense</a>
      </nav>
      <button class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded
        text-base mt-4 md:mt-0 sm:shadow-lg" id="logout">
        Logout
        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          class="w-4 h-4 ml-1" viewBox="0 0 24 24">
          <path d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </button>
      {{else}}
      <nav
        class="md:mr-auto md:ml-4 md:py-1 md:pl-4 md:border-l md:border-gray-400 flex flex-wrap items-center text-base justify-center invisible">
        <a class="mr-5 hover:text-gray-900" href="/dashboard">Dashboard</a>
        <a class="mr-5 hover:text-gray-900" href="/create-budget">New Budget</a>
        <a class="mr-5 hover:text-gray-900" href="/record-expense">Add Expense</a>
        <a href="/login">
          <button class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded
        text-base mt-4 md:mt-0 md:mr-3 items-end md:justify-center">
            Login
            <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              class="w-4 h-4 ml-1" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </button>
        </a>
      </nav>
      {{/if}}
    </div>
  </header>
